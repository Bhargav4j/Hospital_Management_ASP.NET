@page
@model HomeModel
@{
    ViewData["Title"] = "Doctor Home";
}

<div class="container">
    <h1>Welcome, Doctor</h1>
    <p>This is your doctor dashboard.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pending Appointments</h5>
                    <p class="card-text">View pending appointment requests</p>
                    <a href="#" class="btn btn-primary">View Appointments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Patient History</h5>
                    <p class="card-text">View patient medical records</p>
                    <a href="#" class="btn btn-primary">View History</a>
                </div>
            </div>
        </div>
    </div>
</div>
