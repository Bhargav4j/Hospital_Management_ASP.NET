<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">Clinic Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("UserType") == "Patient")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Patient/PatientHome">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Patient/ViewDoctors">Doctors</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Patient/TakeAppointment">Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                        }
                        else if (Context.Session.GetString("UserType") == "Doctor")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Doctor/DoctorHome">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Doctor/PendingAppointment">Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                        }
                        else if (Context.Session.GetString("UserType") == "Admin")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/AdminHome">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/ManageClinic">Manage</a></li>
                            <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - Clinic Management System
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
