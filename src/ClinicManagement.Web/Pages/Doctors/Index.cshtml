@page
@model ClinicManagement.Web.Pages.Doctors.IndexModel
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<h2>Doctor Dashboard</h2>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Pending Appointments</h5>
                <p class="card-text">Review new appointment requests</p>
                <a href="/Doctors/PendingAppointments" class="btn btn-success">View</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Patient History</h5>
                <p class="card-text">View patient medical records</p>
                <a href="/Doctors/PatientHistory" class="btn btn-success">View</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Generate Bills</h5>
                <p class="card-text">Create patient bills</p>
                <a href="/Doctors/Bills" class="btn btn-success">Manage</a>
            </div>
        </div>
    </div>
</div>
