@page
@model ViewDoctorsModel
@{
    ViewData["Title"] = "View Doctors";
}

<h2>Available Doctors</h2>

<div class="row">
    @if (Model.Doctors != null && Model.Doctors.Any())
    {
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@doctor.Name</h5>
                        <p class="card-text">
                            <strong>Specialization:</strong> @doctor.Specialization<br/>
                            <strong>Qualification:</strong> @doctor.Qualification<br/>
                            <strong>Fee:</strong> $@doctor.ConsultationFee<br/>
                            <strong>Phone:</strong> @doctor.PhoneNumber
                        </p>
                        <a asp-page="/Patient/BookAppointment" asp-route-doctorId="@doctor.Id" class="btn btn-primary">Book Appointment</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>No doctors available at the moment.</p>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-page="/Patient/PatientHome" class="btn btn-secondary">Back to Home</a>
</div>
