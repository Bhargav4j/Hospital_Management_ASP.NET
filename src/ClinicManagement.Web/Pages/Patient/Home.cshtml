@page
@model HomeModel
@{
    ViewData["Title"] = "Patient Home";
}

<div class="container">
    <h1>Welcome, Patient</h1>
    <p>This is your patient dashboard.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Appointments</h5>
                    <p class="card-text">View and manage your appointments</p>
                    <a href="#" class="btn btn-primary">View Appointments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View Doctors</h5>
                    <p class="card-text">Browse available doctors</p>
                    <a href="#" class="btn btn-primary">View Doctors</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Medical History</h5>
                    <p class="card-text">View your treatment history</p>
                    <a href="#" class="btn btn-primary">View History</a>
                </div>
            </div>
        </div>
    </div>
</div>
