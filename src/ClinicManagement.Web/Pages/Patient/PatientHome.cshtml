@page
@model ClinicManagement.Web.Pages.Patient.PatientHomeModel
@{
    ViewData["Title"] = "Patient Home";
}

<div class="container mt-4">
    <h2>Welcome, @Model.PatientName</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View Doctors</h5>
                    <p class="card-text">Browse available doctors and their specializations.</p>
                    <a href="/Patient/ViewDoctors" class="btn btn-primary">View Doctors</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Book Appointment</h5>
                    <p class="card-text">Schedule an appointment with a doctor.</p>
                    <a href="/Patient/TakeAppointment" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Appointments</h5>
                    <p class="card-text">View your appointment history and status.</p>
                    <a href="/Patient/CurrentAppointment" class="btn btn-primary">View Appointments</a>
                </div>
            </div>
        </div>
    </div>
</div>
