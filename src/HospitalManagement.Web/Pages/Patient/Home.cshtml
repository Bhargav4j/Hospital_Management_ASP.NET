@page
@model HospitalManagement.Web.Pages.Patient.HomeModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="bi bi-speedometer2"></i> Welcome, @Model.PatientInfo?.Name
            </h2>
            <p class="text-muted">Patient Dashboard</p>
        </div>
    </div>

    @if (Model.PatientInfo != null)
    {
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Total Appointments</h6>
                                <h2>@Model.TotalAppointments</h2>
                            </div>
                            <i class="bi bi-calendar-check" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Pending</h6>
                                <h2>@Model.PendingAppointments</h2>
                            </div>
                            <i class="bi bi-clock-history" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Completed</h6>
                                <h2>@Model.CompletedAppointments</h2>
                            </div>
                            <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Unpaid Bills</h6>
                                <h2>@Model.UnpaidBills</h2>
                            </div>
                            <i class="bi bi-receipt" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event"></i> Upcoming Appointments
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.UpcomingAppointments != null && Model.UpcomingAppointments.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Doctor</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in Model.UpcomingAppointments)
                                        {
                                            <tr>
                                                <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                                <td>@appointment.DoctorName</td>
                                                <td>
                                                    <span class="badge bg-@(appointment.Status == "Pending" ? "warning" : "info")">
                                                        @appointment.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    <a asp-page="/Patient/Appointments" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No upcoming appointments.</p>
                        }
                        <a asp-page="/Patient/ViewDoctors" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Book New Appointment
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-badge"></i> My Profile
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Email:</strong> @Model.PatientInfo.Email</p>
                        <p><strong>Phone:</strong> @Model.PatientInfo.Phone</p>
                        <p><strong>Gender:</strong> @Model.PatientInfo.Gender</p>
                        <p><strong>Birth Date:</strong> @Model.PatientInfo.BirthDate.ToString("MMM dd, yyyy")</p>
                        <p><strong>Address:</strong> @Model.PatientInfo.Address</p>
                        <hr />
                        <p><strong>Member Since:</strong> @Model.PatientInfo.CreatedDate.ToString("MMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-graph-up"></i> Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <a asp-page="/Patient/ViewDoctors" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-search"></i><br />Find Doctors
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-page="/Patient/Appointments" class="btn btn-outline-info w-100">
                                    <i class="bi bi-calendar-check"></i><br />My Appointments
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-page="/Patient/TreatmentHistory" class="btn btn-outline-success w-100">
                                    <i class="bi bi-file-medical"></i><br />Treatment History
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-page="/Patient/BillHistory" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-receipt"></i><br />Bill History
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Unable to load patient information.
        </div>
    }
</div>
