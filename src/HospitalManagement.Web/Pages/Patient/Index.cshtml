@page
@model HospitalManagement.Web.Pages.Patient.IndexModel
@{
    ViewData["Title"] = "Patients";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="bi bi-people"></i> Patient Management
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Patients</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="get">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" name="searchTerm" class="form-control" placeholder="Search by name or email..." value="@Model.SearchTerm" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                            <div class="col-md-6 text-end">
                                <a asp-page="/Signup" class="btn btn-success">
                                    <i class="bi bi-person-plus"></i> Add New Patient
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Patients != null && Model.Patients.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Gender</th>
                                        <th>Birth Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model.Patients)
                                    {
                                        <tr>
                                            <td>@patient.PatientID</td>
                                            <td>@patient.Name</td>
                                            <td>@patient.Email</td>
                                            <td>@patient.Phone</td>
                                            <td>@patient.Gender</td>
                                            <td>@patient.BirthDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (patient.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="/Patient/Appointments" asp-route-id="@patient.PatientID" class="btn btn-info" title="View Appointments">
                                                        <i class="bi bi-calendar-check"></i>
                                                    </a>
                                                    <a asp-page="/Patient/TreatmentHistory" asp-route-id="@patient.PatientID" class="btn btn-primary" title="Treatment History">
                                                        <i class="bi bi-file-medical"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <p class="text-muted">Total Patients: @Model.Patients.Count()</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No patients found.
        </div>
    }
</div>
