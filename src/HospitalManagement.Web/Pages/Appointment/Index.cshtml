@page
@model HospitalManagement.Web.Pages.Appointment.IndexModel
@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <h2><i class="bi bi-calendar-check"></i> All Appointments</h2>

    @if (Model.Appointments != null && Model.Appointments.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Paid</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>@appointment.AppointmentID</td>
                            <td>@appointment.PatientName</td>
                            <td>Dr. @appointment.DoctorName</td>
                            <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                            <td><span class="badge bg-info">@appointment.Status</span></td>
                            <td>
                                @if (appointment.IsPaid)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No appointments found.</div>
    }
</div>
