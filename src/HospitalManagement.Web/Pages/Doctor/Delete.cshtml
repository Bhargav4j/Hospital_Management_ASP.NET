@page "{id:int}"
@model HospitalManagement.Web.Pages.Doctor.DeleteModel
@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container mt-4">
    <h2 class="text-danger"><i class="bi bi-trash"></i> Delete Doctor</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this doctor?</h4>
    </div>

    @if (Model.Doctor != null)
    {
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">Dr. @Model.Doctor.Name</dd>
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Doctor.Email</dd>
                    <dt class="col-sm-3">Specialization</dt>
                    <dd class="col-sm-9">@Model.Doctor.Specialization</dd>
                </dl>

                <form method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="/Doctor/Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    }
</div>
