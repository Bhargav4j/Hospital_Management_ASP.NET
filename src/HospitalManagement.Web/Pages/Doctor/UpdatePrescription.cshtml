@page "{id:int}"
@model HospitalManagement.Web.Pages.Doctor.UpdatePrescriptionModel
@{
    ViewData["Title"] = "Update Prescription";
}

<div class="container mt-4">
    <h2><i class="bi bi-prescription2"></i> Update Prescription</h2>

    @if (Model.Appointment != null)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5>Appointment Details</h5>
                <p><strong>Patient:</strong> @Model.Appointment.PatientName</p>
                <p><strong>Date:</strong> @Model.Appointment.AppointmentDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>Reason:</strong> @Model.Appointment.Disease</p>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.AppointmentId" />

                    <div class="mb-3">
                        <label asp-for="Input.Prescription" class="form-label">Prescription</label>
                        <textarea asp-for="Input.Prescription" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Input.Prescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Progress" class="form-label">Progress Notes</label>
                        <textarea asp-for="Input.Progress" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Input.Progress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Status" class="form-label">Status</label>
                        <select asp-for="Input.Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-page="/Doctor/Home" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
