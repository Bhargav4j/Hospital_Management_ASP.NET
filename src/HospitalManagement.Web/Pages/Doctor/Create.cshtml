@page
@model HospitalManagement.Web.Pages.Doctor.CreateModel
@{
    ViewData["Title"] = "Create Doctor";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-person-plus"></i> Create New Doctor</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Doctor/Index">Doctors</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Name" class="form-label">Full Name</label>
                                <input asp-for="Input.Name" class="form-control" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Phone" class="form-label">Phone</label>
                                <input asp-for="Input.Phone" class="form-control" />
                                <span asp-validation-for="Input.Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.BirthDate" class="form-label">Birth Date</label>
                                <input asp-for="Input.BirthDate" class="form-control" type="date" />
                                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label">Address</label>
                            <textarea asp-for="Input.Address" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Gender" class="form-label">Gender</label>
                                <select asp-for="Input.Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Input.Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.DeptNo" class="form-label">Department</label>
                                <select asp-for="Input.DeptNo" class="form-select" asp-items="Model.DepartmentList">
                                    <option value="">Select Department</option>
                                </select>
                                <span asp-validation-for="Input.DeptNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Specialization" class="form-label">Specialization</label>
                                <input asp-for="Input.Specialization" class="form-control" />
                                <span asp-validation-for="Input.Specialization" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Qualification" class="form-label">Qualification</label>
                                <input asp-for="Input.Qualification" class="form-control" />
                                <span asp-validation-for="Input.Qualification" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.Experience" class="form-label">Experience (Years)</label>
                                <input asp-for="Input.Experience" class="form-control" type="number" />
                                <span asp-validation-for="Input.Experience" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.Salary" class="form-label">Salary</label>
                                <input asp-for="Input.Salary" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Input.Salary" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.ChargesPerVisit" class="form-label">Charges Per Visit</label>
                                <input asp-for="Input.ChargesPerVisit" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Input.ChargesPerVisit" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Create Doctor
                            </button>
                            <a asp-page="/Doctor/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
