@page
@model HospitalManagement.Web.Pages.Doctor.HomeModel
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>
                <i class="bi bi-speedometer2"></i> Welcome, Dr. @Model.DoctorInfo?.Name
            </h2>
            <p class="text-muted">Doctor Dashboard</p>
        </div>
    </div>

    @if (Model.DoctorInfo != null)
    {
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Total Appointments</h6>
                                <h2>@Model.TotalAppointments</h2>
                            </div>
                            <i class="bi bi-calendar-check" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Pending</h6>
                                <h2>@Model.PendingAppointments</h2>
                            </div>
                            <i class="bi bi-clock-history" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Today's Apps</h6>
                                <h2>@Model.TodayAppointments</h2>
                            </div>
                            <i class="bi bi-calendar-day" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Patients Treated</h6>
                                <h2>@Model.DoctorInfo.PatientsTreated</h2>
                            </div>
                            <i class="bi bi-people" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event"></i> Today's Appointments
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.TodayAppointmentsList != null && Model.TodayAppointmentsList.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>Patient</th>
                                            <th>Reason</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in Model.TodayAppointmentsList)
                                        {
                                            <tr>
                                                <td>@appointment.AppointmentDate.ToString("hh:mm tt")</td>
                                                <td>@appointment.PatientName</td>
                                                <td>@appointment.Disease</td>
                                                <td>
                                                    <span class="badge bg-@(appointment.Status == "Pending" ? "warning" : "info")">
                                                        @appointment.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (appointment.Status == "Pending")
                                                    {
                                                        <a asp-page="/Doctor/UpdatePrescription" asp-route-id="@appointment.AppointmentID" class="btn btn-sm btn-primary">
                                                            <i class="bi bi-pencil"></i> Update
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No appointments scheduled for today.</p>
                        }
                        <a asp-page="/Doctor/TodayAppointments" class="btn btn-primary mt-2">
                            <i class="bi bi-calendar-day"></i> View All Today's Appointments
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-badge"></i> My Profile
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Specialization:</strong> @Model.DoctorInfo.Specialization</p>
                        <p><strong>Department:</strong> @Model.DoctorInfo.DepartmentName</p>
                        <p><strong>Experience:</strong> @Model.DoctorInfo.Experience years</p>
                        <p><strong>Qualification:</strong> @Model.DoctorInfo.Qualification</p>
                        <p><strong>Reputation:</strong>
                            <span class="badge bg-info">
                                <i class="bi bi-star-fill"></i> @Model.DoctorInfo.ReputationIndex.ToString("F1")
                            </span>
                        </p>
                        <hr />
                        <p><strong>Consultation Fee:</strong> <span class="text-primary fs-5">$@Model.DoctorInfo.ChargesPerVisit</span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-graph-up"></i> Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <a asp-page="/Doctor/PendingAppointments" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-clock-history"></i><br />Pending Appointments
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a asp-page="/Doctor/TodayAppointments" class="btn btn-outline-success w-100">
                                    <i class="bi bi-calendar-day"></i><br />Today's Schedule
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a asp-page="/Appointment/Index" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-calendar-check"></i><br />All Appointments
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Unable to load doctor information.
        </div>
    }
</div>
