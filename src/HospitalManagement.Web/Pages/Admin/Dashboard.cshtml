@page
@model DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>
<p>Welcome to the administration panel.</p>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Doctors</h5>
                <p class="card-text">Add and manage doctor accounts</p>
                <a href="#" class="btn btn-primary">Manage Doctors</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Staff</h5>
                <p class="card-text">Add and manage staff members</p>
                <a href="#" class="btn btn-primary">Manage Staff</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Reports</h5>
                <p class="card-text">View system reports</p>
                <a href="#" class="btn btn-primary">View Reports</a>
            </div>
        </div>
    </div>
</div>
