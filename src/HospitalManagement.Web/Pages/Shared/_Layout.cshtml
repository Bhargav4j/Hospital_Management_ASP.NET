<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-hospital"></i> Hospital Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Index">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/Index">
                                    <i class="bi bi-people"></i> Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Doctor/Index">
                                    <i class="bi bi-person-badge"></i> Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Department/Index">
                                    <i class="bi bi-building"></i> Departments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Staff/Index">
                                    <i class="bi bi-person-lines-fill"></i> Staff
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Appointment/Index">
                                    <i class="bi bi-calendar-check"></i> Appointments
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserRole") == "Patient")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/Home">
                                    <i class="bi bi-house"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/ViewDoctors">
                                    <i class="bi bi-search"></i> Find Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/Appointments">
                                    <i class="bi bi-calendar-check"></i> My Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/TreatmentHistory">
                                    <i class="bi bi-file-medical"></i> Treatment History
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Patient/BillHistory">
                                    <i class="bi bi-receipt"></i> Bills
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserRole") == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Doctor/Home">
                                    <i class="bi bi-house"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Doctor/PendingAppointments">
                                    <i class="bi bi-clock-history"></i> Pending Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Doctor/TodayAppointments">
                                    <i class="bi bi-calendar-day"></i> Today's Appointments
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item-text">Role: @Context.Session.GetString("UserRole")</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Signup">
                                    <i class="bi bi-person-plus"></i> Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 Hospital Management System. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
