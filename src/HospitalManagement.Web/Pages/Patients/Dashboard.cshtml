@page
@model DashboardModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<h1>Patient Dashboard</h1>
<p>Welcome to your patient dashboard.</p>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My Appointments</h5>
                <p class="card-text">View and manage your appointments</p>
                <a href="#" class="btn btn-primary">View Appointments</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My Bills</h5>
                <p class="card-text">View your medical bills</p>
                <a href="#" class="btn btn-primary">View Bills</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Find Doctors</h5>
                <p class="card-text">Search for available doctors</p>
                <a href="#" class="btn btn-primary">Search Doctors</a>
            </div>
        </div>
    </div>
</div>
