{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_SERVER};Port=5432;Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Pooling=true;MinPoolSize=1;MaxPoolSize=20;ConnectionIdleLifetime=300;Timeout=30;CommandTimeout=30;SSL Mode=Prefer;Trust Server Certificate=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "AllowedHosts": "*"
}
