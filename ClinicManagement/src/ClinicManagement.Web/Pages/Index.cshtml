@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Clinic Management System</h1>
    <p class="lead">Manage your healthcare appointments efficiently</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">For Patients</h5>
                    <p class="card-text">Book appointments, view medical history, and manage your healthcare.</p>
                    <a asp-page="/Login" class="btn btn-primary">Patient Login</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">For Doctors</h5>
                    <p class="card-text">Manage appointments, update patient records, and view schedules.</p>
                    <a asp-page="/Login" class="btn btn-success">Doctor Login</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Administration</h5>
                    <p class="card-text">Manage clinic operations, staff, and system settings.</p>
                    <a asp-page="/Login" class="btn btn-danger">Admin Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
