@page
@model UpdateAppointmentModel
@{
    ViewData["Title"] = "Update Appointment";
}

<h2>Update Appointment</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Appointment Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="AppointmentId" />
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Patient:</strong> @Model.Appointment?.PatientName
                        </div>
                        <div class="col-md-6">
                            <strong>Date:</strong> @Model.Appointment?.AppointmentDate.ToString("MM/dd/yyyy")
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Time:</strong> @Model.Appointment?.Timings
                        </div>
                        <div class="col-md-6">
                            <strong>Disease/Symptoms:</strong> @Model.Appointment?.Disease
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Progress" class="form-label"></label>
                        <textarea asp-for="Progress" class="form-control" rows="4"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Prescription" class="form-label"></label>
                        <textarea asp-for="Prescription" class="form-control" rows="4"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="BillAmount" class="form-label"></label>
                        <input asp-for="BillAmount" class="form-control" type="number" step="0.01" />
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update Appointment</button>
                        <a asp-page="/Doctor/Appointments" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
