@page
@model PatientIndexModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<h2>Patient Dashboard</h2>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Upcoming Appointments</h5>
                <p class="card-text display-4">@Model.UpcomingCount</p>
                <a asp-page="/Patient/Appointments" class="btn btn-light">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Completed Appointments</h5>
                <p class="card-text display-4">@Model.CompletedCount</p>
                <a asp-page="/Patient/History" class="btn btn-light">View History</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Available Doctors</h5>
                <p class="card-text display-4">@Model.DoctorCount</p>
                <a asp-page="/Patient/ViewDoctors" class="btn btn-light">Browse Doctors</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Quick Actions</h4>
            </div>
            <div class="card-body">
                <a asp-page="/Patient/ViewDoctors" class="btn btn-primary">Book New Appointment</a>
                <a asp-page="/Patient/Appointments" class="btn btn-secondary">View My Appointments</a>
                <a asp-page="/Patient/Profile" class="btn btn-info">Update Profile</a>
            </div>
        </div>
    </div>
</div>
