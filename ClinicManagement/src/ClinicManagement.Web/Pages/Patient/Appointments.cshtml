@page
@model AppointmentsModel
@{
    ViewData["Title"] = "My Appointments";
}

<h2>My Appointments</h2>

<div class="row mt-3">
    <div class="col-md-12">
        @if (Model.Appointments.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Appointment Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Bill Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToString("MM/dd/yyyy")</td>
                            <td>@appointment.Timings</td>
                            <td>@appointment.DoctorName</td>
                            <td>@appointment.DoctorName</td>
                            <td>
                                <span class="badge bg-@GetStatusBadgeClass(appointment.Status)">
                                    @appointment.Status
                                </span>
                            </td>
                            <td>$@appointment.BillAmount</td>
                            <td>
                                <a asp-page="/Patient/AppointmentDetails" asp-route-id="@appointment.AppointmentID" class="btn btn-sm btn-info">Details</a>
                                @if (appointment.Status == "Pending")
                                {
                                    <button class="btn btn-sm btn-danger" onclick="confirmCancel(@appointment.AppointmentID)">Cancel</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">You have no appointments.</div>
            <a asp-page="/Patient/ViewDoctors" class="btn btn-primary">Book an Appointment</a>
        }
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Confirmed" => "info",
            "Completed" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        function confirmCancel(appointmentId) {
            if (confirm('Are you sure you want to cancel this appointment?')) {
                window.location.href = '/Patient/CancelAppointment?id=' + appointmentId;
            }
        }
    </script>
}
